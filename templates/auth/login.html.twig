{% extends 'base.html.twig' %}
{% block title 'Se connecter' %}
{% block body %}
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="#" class="h1"><b>Admin</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Se connecter</p>
                {% if error %}
                    <alert-message type="danger">
                        {{ error.messageKey | trans(error.messageData, 'security') }}
                    </alert-message>
                {% endif %}

                <form method="post">
                    <div class="input-group mb-3">
                        <input type="text" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" class="form-control" required autofocus>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="form-control" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="rememberMe" name="_remember_me">
                                <label for="rememberMe">Se souvenir de moi</label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary">Connexion</button>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <!-- /.col -->
                    </div>
                </form>


                <p class="mb-1">
                    <a href="{{ path('auth_password_reset') }}" class="auth-password-forgot">Mot de passe oublié ?</a>
                </p>
                <p class="mb-0">
                    <a href="#" class="text-center">Créer un compte</a>
                </p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
{% endblock %}