{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
<div class="login-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="#" class="h1"><b>Admin</b></a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Mot de passe oubli√©!</p>

    {% if error %}
      <alert-message type="danger">
        {{ error.messageKey | trans(error.messageData, 'security') }}
      </alert-message>
    {% endif %}

    {{ form_start(form, {attr: {class: 'auth-form'}}) }}
      <div class="input-group mb-3">
        {{ form_widget(form.email,{'attr':{
          'class':'form-control',
          'placeholder':'Email'
        }}) }}
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-envelope"></span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <button type="submit"  class="btn btn-primary btn-block">M'envoyer les instructions</button>
        </div>
      </div>
    {{ form_end(form) }}
      <p class="mt-3 mb-1">
        <a href="{{ path('auth_login') }}">Login</a>
      </p>

    </div>
    <!-- /.login-card-body -->
  </div>
</div>
{% endblock %}
